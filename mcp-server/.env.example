# Orbios MCP Server - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Authentication Configuration
# ============================================

# Current user's Discord ID (for development/testing)
# In production, this would come from OAuth flow
ORBIOS_USER_ID=

# Current user's Discord username
ORBIOS_USERNAME=

# Comma-separated list of Discord role IDs for the user
# Example: 1446244355479306260,1446245005663535298
# Leave empty for public access
ORBIOS_USER_ROLES=

# ============================================
# Hasura Database Configuration (OPTIONAL)
# ============================================
# Only required if using Hasura for centralized user management
# For basic usage, you can skip this entire section and use file-based auth above

# Hasura PostgreSQL connection (on do-sgp1-ops)
HASURA_HOST=
HASURA_PORT=5432
HASURA_DATABASE=postgres
HASURA_USER=postgres
HASURA_PASSWORD=

# Hasura JWT Secret (generate with: node scripts/generate-jwt-secret.js)
HASURA_JWT_SECRET=

# Hasura GraphQL endpoint (optional, for direct GraphQL queries)
HASURA_GRAPHQL_ENDPOINT=
HASURA_ADMIN_SECRET=

# ============================================
# Discord Configuration
# ============================================

# Orbios Discord Server ID
DISCORD_GUILD_ID=1414519140861083792

# Discord OAuth (for future web-based auth)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=

# ============================================
# MCP Server Configuration
# ============================================

# Node environment (development, production)
NODE_ENV=development

# Enable debug logging
DEBUG=false

